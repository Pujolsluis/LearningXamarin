<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectWeek2.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="Black" Padding="16,32,16,16">
            <Label Text="First Name"  Style="{DynamicResource darkBackgroundLabelStyle}"/>
            <Entry Text="{Binding FirstName}" Placeholder="First Name. . ."  Style="{DynamicResource darkBackgroundEntryStyle}"/>
            <Label Text="Last Name" Style="{DynamicResource darkBackgroundLabelStyle}"/>
            <Entry Text="{Binding LastName}" Placeholder="Last Name. . ." Style="{DynamicResource darkBackgroundEntryStyle}" />
            <Label Text="Email"  Style="{DynamicResource darkBackgroundLabelStyle}"/>
            <Entry Text="{Binding Email}" Placeholder="Email. . ." Style="{DynamicResource darkBackgroundEntryStyle}"/>
            <Label Text="Password" Style="{DynamicResource darkBackgroundLabelStyle}"/>
            <Entry Text="{Binding Password}" Placeholder="Password. . ." Style="{DynamicResource darkBackgroundEntryStyle}" IsPassword="True"/>
            <Button Text="SIGN UP" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" Margin="0,16,0,0" Command="{Binding SignUp}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>