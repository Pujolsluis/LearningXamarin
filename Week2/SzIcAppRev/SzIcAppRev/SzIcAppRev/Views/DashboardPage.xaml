<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzIcAppRev.Views.DashboardPage"
             Padding="16">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Image HorizontalOptions="Center"
                   WidthRequest="100" HeightRequest="100">
                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <On Platform="Android">androidlogo.png</On>
                        <On Platform="iOS">ioslogo.png</On>
                    </OnPlatform>
                </Image.Source>
            </Image>
            
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand"
                         Orientation="Horizontal">
                    <Button Style="{StaticResource darkButtonStyle}"
                            Text="Small"/>
                <Button Style="{StaticResource darkButtonStyle}"
                            Text="Medium"/>
                <Button Style="{StaticResource darkButtonStyle}"
                            Text="Large"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>