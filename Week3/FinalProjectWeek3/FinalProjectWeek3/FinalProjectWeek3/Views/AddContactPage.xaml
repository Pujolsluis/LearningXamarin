<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectWeek3.Views.AddContactPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="0,32,0,0">
            <Image Source="ic_add_contact"  HorizontalOptions="CenterAndExpand" Scale="1.2"/>
            <Entry Text="{Binding Name}" Placeholder="Name" HorizontalOptions="FillAndExpand" Margin="16,8,16,0" Keyboard="Text"/>
            <Entry Text="{Binding PhoneNumber}" Placeholder="Phone Number" HorizontalOptions="FillAndExpand" Margin="16,8,16,0" Keyboard="Telephone"/>
            <Button Text="ADD"  TextColor="White" BackgroundColor="#009688" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand" Command="{Binding AddContact}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>