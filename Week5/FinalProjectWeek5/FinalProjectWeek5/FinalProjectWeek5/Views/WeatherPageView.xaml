<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectWeek5.Views.WeatherPageView">
    <ContentPage.Content>
        <StackLayout Padding="16,16,16,16" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Label x:Name="WeatherLocation" FontSize="Medium" Text="Welcome to Weather in Santo Domingo App"/>
            <Picker x:Name="WeatherPicker" Margin="0,16,0,16"/>
            <Button Text="Get Weather" TextColor="White" BackgroundColor="#FFC107" HorizontalOptions="FillAndExpand" Clicked="Button_ClickedAsync"/>
            <Image x:Name="WeatherImage" WidthRequest="80" HeightRequest="80" Margin="0,24,0,8" Source="" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="WeatherTitle" TextColor="#212121" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="TempC" TextColor="#757575" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="TempF" TextColor="#757575" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>